{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["shared/*"],
      "@entities/*": ["entities/*"],
      "@widgets/*": ["widgets/*"],
      "@features/*": ["features/*"],
      "@app/*": ["app/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@shared/*": ["shared/*"],
        "@entities/*": ["entities/*"],
        "@widgets/*": ["widgets/*"],
        "@features/*": ["features/*"],
        "@app/*": ["app/*"]
      }
    }
  }
}
